<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.investigatorparty">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".InvestigatorActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ClueActivity"
            android:label="@string/title_activity_clue" />
        <activity
            android:name=".JournalActivity"
            android:label="@string/title_activity_notes" />

        <service
            android:name=".ClueTimerService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".InvestigationDatabaseService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".InventoryActivity"
            android:label="@string/title_activity_inventory" />
        <activity
            android:name=".FateActivity"
            android:label="@string/title_activity_fate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SkillCheckActivity" />

        <service
            android:name=".MusicService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>